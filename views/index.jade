extends layout


block content
  div(class='container')
    h1= title
    p Welcome to #{title}
  div(class='chatroom')
    div(class='users')
  form(id='chat')
    textarea(id='chat-box', rows='2')
    p
      input(type='submit' value='send')
  div(class='cardwrap')
    button(class='start').
      Start Game
    button(class='draw').
      Draw Card
    button(class='ready').
      Ready
    div(class='card-show')
